{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "nodeNext",
    "target": "es2022",
    "moduleResolution": "nodeNext",
    "noEmit": true,
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  }
}
